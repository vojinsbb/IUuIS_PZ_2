      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetworkService.Views"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      Width="700" Height="700"
      FontFamily="Calibri">
    <UserControl.Resources>
        <ControlTemplate
            x:Key="RoundedListViewTemplate"
            TargetType="ListView">
            <Border
                CornerRadius="10"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
                <ScrollViewer>
                    <ItemsPresenter/>
                </ScrollViewer>
            </Border>
        </ControlTemplate>
        <ControlTemplate
            x:Key="RoundedButtonTemplate"
            TargetType="Button">
            <Border
                x:Name="buttonBorder"
                CornerRadius="5"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter
                        TargetName="buttonBorder"
                        Property="BorderBrush"
                        Value="LightBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid>
        <StackPanel
            Orientation="Horizontal"
            Margin="60 30 30 0">
            <StackPanel Orientation="Vertical">
                <Border
                    CornerRadius="5"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Height="500"
                    Width="190"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0 5 30 0">
                    <ListView
                        Background="{StaticResource UISecondaryColor}"
                        BorderThickness="0"
                        ToolTip="List view of entities"
                        x:Name="listViewEntityList"
                        SelectedItem="{Binding SelectedEntity}"
                        Template="{StaticResource RoundedListViewTemplate}">
                        <ListView.Resources>
                            <CollectionViewSource 
                                x:Key="groupedEntities"
                                Source="{Binding EntitiesInList}">
                                <CollectionViewSource.GroupDescriptions>
                                    <PropertyGroupDescription PropertyName="Type.Type"/>
                                </CollectionViewSource.GroupDescriptions>
                            </CollectionViewSource>
                            <GroupStyle x:Key="groupStyle">
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Name}"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource TextColor}"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.Resources>

                        <ListView.GroupStyle>
                            <StaticResource ResourceKey="groupStyle"/>
                        </ListView.GroupStyle>
                        <ListView.ItemsSource>
                            <Binding Source="{StaticResource groupedEntities}"/>
                        </ListView.ItemsSource>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Orientation="Horizontal"
                                    Cursor="Hand">
                                    <TextBlock
                                        Text="{Binding Name}"
                                        Foreground="{StaticResource TextColor}"/>
                                    <TextBlock
                                        Text=" "/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction 
                                    Command="{Binding SelectionChanged}"
                                    CommandParameter="{Binding ElementName=listViewEntityList}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                <i:InvokeCommandAction 
                                    Command="{Binding MouseLeftButtonUp}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListView>
