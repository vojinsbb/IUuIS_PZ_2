                                Foreground="{StaticResource UIPrimaryColor}"
                                Background="{StaticResource UIWhiteColor}"
                                BorderBrush="{StaticResource UISecondaryColor}"
                                Command="{Binding FreeCanvas}"
                                CommandParameter="11"
                                Width="20"
                                Height="20"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="2 483 0 0"/>
                            <TextBlock
                                Margin="2 507 0 0"
                                Text="{Binding DescriptionCollection[11]}"
                                FontSize="12"
                                Foreground="{StaticResource TextColor}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding LineCollection}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Width="390" Height="520"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line
                                X1="{Binding X1}"
                                X2="{Binding X2}"
                                Y1="{Binding Y1}"
                                Y2="{Binding Y2}"
                                Stroke="{StaticResource LineColor}"
                                StrokeThickness="3"
                                StrokeStartLineCap="Round"
                                StrokeEndLineCap="Round"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </StackPanel>
    </Grid>
</UserControl>
